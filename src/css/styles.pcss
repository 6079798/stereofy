        overflow: hidden;
        width: 100%;
        height: 250px;
        border-radius: 10px 10px 0 0;

        img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: translateZ(0);
            transition: var(--baseTransition);
        }
    }

    &__footer {
        padding: 33px 27px 35px 30px;
        background-color: #313959;
        border-radius: 0 0 10px 10px;
    }

    &__title {
        color: var(--primaryTextColor);
        font-family: var(--primaryFont);
        font-size: 18px;
        font-weight: 400;
        margin-bottom: 13px;
    }

    &__intro {
        color: #e0e0e0;
        font-family: var(--secondaryFont);
        font-size: 14px;
        line-height: 1.71;
        margin-bottom: 30px;
    }

    &__user {
        display: flex;
        align-items: center;
    }

    &__arrow {
        display: block;
        width: 0;
        height: 10px;
        /*noinspection CssInvalidFunction*/
        background: inline('hover-arrow-bg.svg') left center no-repeat;
        transition: var(--baseTransition);
    }

    &__avatar {
        flex-shrink: 0;
        display: block;
        width: 16px;
        height: 16px;
        margin-right: 13px;
        transition: var(--baseTransition);
    }

    &__username {
        color: #848597;
        transition: var(--baseTransition);
    }
}

.sidebar {
    padding: 0 10px;

    &__search {
        width: 100%;
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #2f364f;
        padding: 6px 0;
        margin-bottom: 65px;
    }

    &__input {
        width: 80%;
        border: none;
        outline: none;
        background: none;

        &, &::placeholder {
            color: #e2e2e2;
            font-family: var(--secondaryFont);
            font-size: 15px;
            font-weight: 400;
        }
    }

    &__btn {
        flex-shrink: 0;
        border: none;
        outline: none;
        width: 24px;
        height: 24px;
        /*noinspection CssInvalidFunction*/
        background: inline('search-icon.svg') center center/15px 15px no-repeat;
        margin-right: 28px;
    }

    &__title {
        font-size: 20px;
        font-weight: 400;

