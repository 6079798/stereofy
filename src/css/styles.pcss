        }
    }

    &__news {
        width: 100%;
        margin-bottom: 36px;

        @media (--md) {
            width: calc(50% - 10px);
        }

        @media (--xl) {
            width: 100%;
        }
    }

    &__tags {
        width: 100%;
    }
}

.categories {
    &__title {
        margin-bottom: 13px;
    }

    &__items {
        list-style-type: none;
    }

    &__item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #e2e2e2;
        font-family: var(--secondaryFont);
        font-size: 15px;
        border-bottom: 1px solid #2f364f;

    }

    &__link {
        width: 75%;
        color: inherit;
        text-decoration: none;
        padding: 6px 0 11px 0;
        transition: var(--baseTransition);

        &:hover {
            color: var(--hoverColor);
        }
    }

    &__count {
        width: 25%;
        text-align: center;
        font-size: 16px;
    }
}

.news {
    &__title {
        margin-bottom: 35px;
    }

    &__items {
        list-style-type: none;
    }

    &__item {
        display: flex;
        flex-direction: column;
        margin-bottom: 30px;

        @media (--sm) {
            flex-direction: row;
            align-items: center;
        }

        @media (--hd) {
            align-items: flex-start;
        }

    }

    &__img {
        border-radius: 3px;
        display: block;
        width: 100%;
        height: 103px;
        object-fit: cover;
        margin-right: 28px;

        @media (--sm) {
            width: 141px;
            flex-shrink: 0;
        }
    }

    &__text {
        color: #e2e2e2;
        font-family: var(--secondaryFont);
        font-size: 16px;
        padding: 3px 0;
        transition: var(--baseTransition);
    }

    &__date {
        display: block;
        color: #ffffff;
        font-size: 15px;
        font-weight: 500;
        text-transform: uppercase;
        margin-bottom: 7px;
        transition: var(--baseTransition);
    }

    &__link {
        text-decoration: none;

        &:hover {
            .news__text, .news__date {
                color: var(--hoverColor);
            }
        }
    }
}

.tags {
    &__title {
        margin-bottom: 17px;
    }

    &__items {
        list-style-type: none;
        font-size: 0;
    }

    &__item {
        display: inline-block;
        font-family: var(--secondaryFont);
        font-size: 15px;
        font-weight: 500;
        background: #313959;
        border-radius: 3px;
        margin: 0 10px 10px 0;
    }

    &__link {
        display: block;
        color: #dbdbdb;
        text-decoration: none;
        padding: 12px 26px;
        transition: var(--baseTransition);

        &:hover {
            color: var(--hoverColor);
        }
    }
}

.post {
    margin-bottom: 60px;

    &__content {
        img {
            display: block;
            width: 100%;
            height: 250px;
            object-fit: cover;
            margin-bottom: 48px;

            @media (--sm) {
                height: 320px;
            }

            @media (--lg) {
                height: 450px;
            }
        }

        h2, h3, h4 {
            font-weight: 400;
            line-height: 1;
            margin-bottom: 21px;
        }

        h2 {
            font-size: 25px;
        }

        h3 {
            font-size: 20px;
        }

        h4 {
            font-size: 16px;
        }

        p {
            color: #adb1c0;
            font-family: var(--secondaryFont);
            font-size: 15px;
            line-height: 1.87;
            margin-bottom: 23px;
        }

        blockquote {
            /*noinspection CssInvalidFunction*/
            background: #13142e;
            padding: 20px;
            margin-top: 46px;
            margin-bottom: 38px;

            @media (--sm) {
                /*noinspection CssInvalidFunction*/
                background: #13142e inline('quote-bg.png') 40px 40px no-repeat;
                padding: 33px 99px 35px 87px;

            }

            p {
                color: #adb1c0;
                font-family: var(--secondaryFont);
                font-size: 20px;
                font-style: italic;
                line-height: 1.5;
                margin-bottom: 19px;
            }

            footer {
                display: flex;
                align-items: center;
                color: #adb1c0;
                font-family: var(--secondaryFont);
                font-size: 15px;
                text-transform: uppercase;

                &::before {
                    content: '';
                    display: block;
                    width: 20px;
                    height: 1px;
                    background: #c0c0c0;
                    margin-right: 11px;
                }
            }
        }
    }

    &__footer {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        flex-direction: column;
        background-color: #13142e;
        padding: 39px 30px;
        margin-top: 43px;

        @media (--sm) {
            flex-direction: row;
            align-items: flex-start;
        }
    }

    &__props {
        list-style-type: none;
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;


        @media (--sm) {
            margin-right: auto;
            margin-bottom: 0;
        }
    }

    &__prop {
        padding: 0 15px;
        border-left: 1px solid #fff;

        &:first-child {
            padding-left: 0;
            border-left: 0;
        }
    }

    &__socials {
        list-style-type: none;
        font-size: 0;
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;

        @media (--sm) {
            margin-bottom: 0;
        }

        li:first-child {
            .post__social {
                margin-left: 0;
            }
        }
    }

    &__social {
        display: block;
        position: relative;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #4c65a8;
        margin-left: 14px;
        transition: var(--baseTransition);

        &:hover {
            background: #fff;

            svg {
                fill: #4c65a8;
            }
        }

        svg {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            fill: #fff;
            width: 8px;
            height: 15px;
            margin: auto;
            transition: var(--baseTransition);
        }

        &--tw {
            background: #41a1f6;

            &:hover {
                svg {
                    fill: #41a1f6;
                }
            }

            svg {
                width: 13px;
                height: 12px;
            }
        }

        &--google {
            background: #d7692d;

            &:hover {
                svg {
                    fill: #d7692d;
                }
            }

            svg {
                width: 20px;
                height: 12px;
            }
        }

        &--inst {
            background: #8f6247;

            &:hover {
                svg {
                    fill: #8f6247;
                }
            }

            svg {
                width: 14px;
                height: 14px;
            }
        }
    }

    &__tags {
        width: 100%;
        list-style-type: none;
        display: flex;
        flex-wrap: wrap;
        margin-top: 10px;
    }

    &__tag {
        color: #adb1c0;
        text-decoration: none;
        font-family: var(--secondaryFont);
        display: block;
        padding: 8px;
        border: 1px solid #30395e;
        margin: 5px;
        transition: var(--baseTransition);

        @media (--xl) {
            margin: 0 10px 0 0;
        }

        &:hover {
            color: var(--hoverColor);
            border-color: var(--hoverColor);
        }
    }

    &__comments {
        margin-bottom: 110px;
    }
}

.comments {
    &__title {
