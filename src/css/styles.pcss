    }

    &__input {
        width: 100%;
        border: none;
        outline: none;
        background: none;
        border-bottom: 1px solid #e1e1e1;
        padding: 13px 0;
        color: #adb1c0;
        font-family: var(--secondaryFont);
        font-size: 14px;
        font-weight: 400;
        letter-spacing: 0.9px;
        margin-bottom: 18px;

        @media (--md) {
            width: calc(50% - 20px);
        }

        &::placeholder {
            color: #adb1c0;
            opacity: 1;
        }
    }

    &__textarea {
        width: 100%;
        border: none;
        outline: none;
        background: none;
        border-bottom: 1px solid #e1e1e1;
        padding: 13px 0;
        resize: none;
        height: 195px;
        color: #adb1c0;
        font-family: var(--secondaryFont);
        font-size: 14px;
        font-weight: 400;
        letter-spacing: 0.9px;
        margin-bottom: 46px;

        &::placeholder {
            color: #adb1c0;
            opacity: 1;
        }
    }

    &__submit {
        cursor: pointer;
        border: none;
        outline: none;
        border-radius: 3px;
        background: linear-gradient(to left, #ff7d56 0%, #ff498e 100%);
        color: var(--primaryTextColor);
        font-family: var(--secondaryFont);
        font-size: 15px;
        letter-spacing: 1.1px;
        text-transform: uppercase;
        padding: 11px 34px;
    }
