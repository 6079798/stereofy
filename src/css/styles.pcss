@import 'imports/fonts.css';
@import 'imports/custom-mq.pcss';

:root {
    --primaryBg: #13142e;
    --secondaryBg: #1b2136;
    --primaryTextColor: #fff;
    --baseTransition: all 0.3s ease-in-out;
    --hoverColor: #ff6272;
    --primaryFont: "Fira Sans Condensed", sans-serif;
    --secondaryFont: "Poppins", sans-serif;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.page {
    min-width: 320px;
    color: var(--primaryTextColor);
    background: var(--secondaryBg);
    font-family: var(--primaryFont);
    font-size: 14px;
    font-weight: 400;

    &--sticky-header {
        .header {
            position: sticky;
            top: 0;
            z-index: 100;
            background: color(#141435 alpha(95%));
        }
    }

    &__container {
        max-width: 1170px;
        padding: 0 20px;
        margin: auto;

        @media (--hd) {
            padding: 0;
        }

        &--with-sidebar {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: flex-start;

            .page__content {
                @media (--xl) {
                    width: calc(70% - 20px);
                }

                @media (--hd) {
                    width: 770px
                }
            }

            .page__sidebar {
                @media (--xl) {
                    width: calc(30% - 20px);
                }

                @media (--hd) {
                    width: 370px;
                }
            }
        }
    }

    &__sidebar {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 30px;
    }

    &__header {
        min-height: 320px;
        background: url("../img/page-title-bg.jpg") center center/cover no-repeat;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 110px;
        padding: 20px;
    }

    &__title {
        position: relative;
        font-size: 34px;
        font-weight: 400;
        text-transform: uppercase;
        margin: -10px 0 18px;
        padding-bottom: 10px;
        text-align: center;

        @media (--sm) {
            font-size: 45px;
        }

        &::after {
            content: '';
            display: inline-block;
            height: 2px;
            width: 180px;
            background: red;
            position: absolute;
            left: -100%;
            right: -100%;
            bottom: 0;
            background: linear-gradient(to left, #ff7d56 0%, #ff498e 100%);
            margin: auto;
        }
    }

    &__pagination {
        margin-bottom: 109px;
    }
}

.breadcrumbs {
    list-style-type: none;
    display: flex;
    flex-wrap: wrap;

    &__item {
        color: #f3f3f3;
        font-family: var(--secondaryFont);
        font-size: 18px;
        line-height: 1;
        border-right: 2px solid #f3f3f3;
        padding: 0 10px;
        margin-bottom: 5px;

        &:last-child {
            border-right: 0;
        }

        a {
            color: inherit;
            text-decoration: none;
            transition: var(--baseTransition);

            &:hover {
                color: var(--hoverColor);
            }
        }
    }
}

.search {
    position: relative;
    display: flex;
    align-items: center;

    &__input {
        width: 0;
        overflow: hidden;
        border: none;
        outline: none;
        border-radius: 5px;
        font-family: var(--secondaryFont);
        transition: var(--baseTransition);

        &--open {
            width: 250px;
            padding: 2px 5px;
            margin-right: 10px;
        }
    }

    &__btn {
        cursor: pointer;
        outline: none;
        border: none;
        width: 28px;
        height: 28px;
        /*noinspection CssInvalidFunction*/
        background: inline('search-icon.svg') center center/20px 20px no-repeat;
    }
}

.cart {
    cursor: pointer;
    outline: none;
    border: none;
    width: 28px;
    height: 28px;
    /*noinspection CssInvalidFunction*/
    background: inline('cart-icon.svg') center center/22px 20px no-repeat;
}

.nav {
    order: 30;
    width: 100%;
    height: 0;
    overflow: hidden;
    transition: height 0.3s linear;

    @media (--lg) {
        order: 0;
        height: auto !important;
        width: auto;
        overflow: visible;
        margin-right: auto;
    }

    &__links {
        list-style-type: none;
        display: flex;
        flex-direction: column;
        text-align: center;
        padding: 30px 0;

        @media (--lg) {
            flex-direction: row;
            text-align: left;
            padding: 0;
        }

        li:last-child {
            .nav__link {
                margin-right: 0;
            }
        }
    }

    &__link {
        position: relative;
        display: block;
        color: var(--primaryTextColor);
        font-family: var(--secondaryFont);
        font-size: 16px;
        font-weight: 500;
        text-decoration: none;
        padding: 10px;
        transition: var(--baseTransition);

        @media (--hd) {
            padding: 10px 0;
            margin-right: 46px;
        }

        &::before {
            @media (--lg) {
                content: '';
                opacity: 0;
                display: block;
                position: absolute;
                top: -17px;
                left: 10px;
                width: 16px;
                height: 19px;
                /*noinspection CssInvalidFunction*/
                background: inline('nav-hover-bg.svg') no-repeat;
                transition: var(--baseTransition);
            }

            @media (--hd) {
                left: 0;
            }
        }

        &:hover, &--active {
            color: var(--hoverColor);

            &::before {
                @media (--lg) {
                    opacity: 1;
                }
            }
        }
    }
}

.nav-btn {
    order: 20;
    align-self: center;
    border: none;
    outline: none;
    background: transparent;
    width: 24px;
    height: 24px;

    @media (--lg) {
        display: none;
    }

    &--active {
        .nav-btn__bar {
            margin-bottom: 2px;
        }

        .nav-btn__bar--middle {
            opacity: 0;
            transform: translateX(20px);
        }
    }

    &__bar {
        display: block;
        margin-bottom: 5px;
        width: 100%;
        height: 2px;
        background: #fff;
        transition: all 0.1s linear;

        &:last-child {
            margin-bottom: 0;
        }
    }
}

.header {
    background: #141435;

    &__inner {
        display: flex;
        flex-wrap: wrap;
        max-width: 1690px;
        padding: 10px 20px;
        margin: auto;

        @media (--lg) {
            min-height: 80px;
            align-items: center;
        }

        @media (--hd) {
            padding: 0;
        }
    }

    &__logo {
        margin-right: auto;

        @media (--hd) {
            margin-right: 135px;
        }

        img {
            display: block;
            width: 124px;
            height: 29px;
        }
    }

    &__cart {
        display: none;

        @media (--sm) {
            display: block;
            margin-right: 20px;
        }
    }

    &__search {
        display: none;

        @media (--sm) {
            display: flex;
            margin-right: 20px;
        }

        @media (--hd) {
            margin-right: 0;
        }
    }
}

.hero {
    position: relative;
    min-height: 600px;
    height: calc(100vh - 49px);
    background: linear-gradient(color(#1b2136 alpha(80%)), color(#1b2136 alpha(80%))), url('../img/hero-bg.jpg') center center/cover fixed no-repeat;

    @media (--lg) {
        height: calc(100vh - 80px);
    }

    @media (--hd) {
        min-height: 1000px;
    }

    .page__container {
        height: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    &__inner {
        margin-top: -33px;
    }

    &__title {

        font-weight: 600;
        font-size: 48px;
        line-height: 1.1;
        letter-spacing: -1.4px;
        text-transform: uppercase;
        text-align: center;
        margin-bottom: 15px;

        @media (--md) {
            font-size: 60px;

        }
    }

    &__slogan {
        max-width: 580px;
        color: #e8e8e8;
        font-family: var(--secondaryFont);
        line-height: 1.67;
        text-align: center;
        margin: auto auto 39px;

        @media (--md) {
            font-size: 18px;
        }
    }

    &__scroll {
        position: relative;
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 110px;
        height: 55px;
        border-radius: 2px;
        background: linear-gradient(to left, #ff7d56 0%, #ff498e 100%);
        transform: perspective(1px) translateZ(0);
        box-shadow: 0 0 1px transparent;
        transition: var(--baseTransition);

        @media (--lg) {
            margin-left: 43.4%;
        }

        &:hover {
            box-shadow: 1px 10px 10px -10px color(var(--hoverColor) alpha(80%));
            transform: scale(1.15);
        }

        &::before {
            position: absolute;
            top: 0;
            bottom: 0;
            left: -28px;
            margin: auto;
            content: '';
            display: block;
            width: 74px;
            height: 15px;
            /*noinspection CssInvalidFunction*/
            background: inline('hero-arrow.svg') center no-repeat;
        }
    }

    &__socials {
        list-style-type: none;
        position: absolute;
        top: 100%;
        right: 50%;
        transform: translate(50%, -100%);

        li {
            display: inline-block;

            @media (--xl) {
                display: block;
            }
        }


        @media (--xl) {
            top: 49.3%;
            right: 0;
            transform: translateY(-50%);
        }

        @media (--hd) {
            right: -22.3%;
        }

        li:last-child {
            .hero__social {
                margin-bottom: 0;
            }
        }
    }

    &__social {
        display: block;
        text-decoration: none;
        font-size: 0;
        padding: 5px;
        margin-bottom: 28px;

        @media (--xl) {
            padding: 0;
        }

        svg {
            fill: #b7bad2;

            .gradient {
                opacity: 0;
                transition: var(--baseTransition);
            }

            &:hover {
                .gradient {
                    opacity: 1;
                }
            }
        }
    }
}

.title {
    position: relative;
    font-weight: 400;
    font-size: 40px;
    letter-spacing: 0.6px;
    padding-left: 47px;
    margin-bottom: 56px;

    &::before {
        content: '';
        display: block;
        width: 19px;
        height: 45px;
        position: absolute;
        top: 10px;
        left: 0;
        /*noinspection CssInvalidFunction*/
        background: inline('title-bg.svg') center no-repeat;
    }
}

.visually-hidden:not(:focus):not(:active) {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    border: 0;
    padding: 0;
    white-space: nowrap;
    clip-path: inset(100%);
    clip: rect(0 0 0 0);
    overflow: hidden;
}

.section {
    background: var(--primaryBg);
    padding-top: 104px;
    padding-bottom: 103px;

    &--light-bg {
        background: var(--secondaryBg);
    }
}

.play {
    cursor: pointer;
    display: block;
    border: 0;
    outline: 0;
    width: 25px;
    height: 25px;
    background: url("../img/play-bg.svg") center no-repeat;

    &--small {
        width: 20px;
        height: 20px;
    }

    &--medium {
        width: 32px;
        height: 33px;
    }

    &--large {
        width: 40px;
        height: 40px;
    }

    &--rounded {
        width: 51px;
        height: 51px;
        border-radius: 50%;
        background: #1d243d url('../img/play-bg-rounded.svg') 55% center/11px 12px no-repeat;
    }
}

.btn {
    cursor: pointer;
    outline: none;
    background: transparent;
    display: inline-block;
    color: #848597;
    font-family: var(--secondaryFont);

    font-size: 15px;
    text-transform: uppercase;
    text-decoration: none;
    border-radius: 5px;
    border: 1px solid #383f5c;
    padding: 8px 28px;
    transition: var(--baseTransition);

    &:hover {
        background: #fff;
        color: #570fc6;
    }
}

.event {
    display: flex;
    border-radius: 5px;
    border: 1px solid #383f5c;
    padding: 9px;
    color: #c1c3da;
    font-family: var(--secondaryFont);

    font-size: 15px;

    &__time {
        color: inherit;
        text-decoration: none;
        width: 40%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 5px;
        background-color: #1e253f;
        text-transform: uppercase;
        padding: 5px;
        margin-right: 20px;
        transition: var(--baseTransition);

        &:hover {
            color: var(--hoverColor);
        }
    }

    &__date {
        font-size: 12px;
    }
}

.select {
    display: flex;
    align-items: center;
    min-height: 20px;

    label {
        color: #c1c3da;
        font-family: var(--secondaryFont);
        font-size: 15px;

        margin-right: -6px;
    }

    .choices {
        color: #c1c3da;
        font-family: var(--secondaryFont);

        &::after {
            right: 0;
        }

        &__inner {
            border: none;
            background: transparent;
            font-size: 15px;

        }

        &__list {
            border: none;
            width: 200%;

            &--dropdown {
                background: #1e253f;

                .choices__item {
                    &:hover, &.is-highlighted {
                        background: color(#1e253f shade(50%));
                    }
                }
            }
        }
    }
}

.live {
    &__slider {
        position: relative;

        .tns-controls button {
            position: absolute;
            top: 106%;
            z-index: 10;
            border: 0;
            outline: 0;
            width: 60px;
            height: 45px;
            border-radius: 2px;
            font-size: 0;
            background: #2c3552;
            transform: perspective(1px) translateZ(0);
            box-shadow: 0 0 1px transparent;
            transition: var(--baseTransition);

            @media (--xl) {
                top: 33%;
            }

            &:hover {
                box-shadow: 1px 10px 10px -10px color(var(--hoverColor) alpha(80%));
                transform: scale(1.2);
            }

            &::before {
                content: '';
                display: inline-block;
                width: 48px;
                height: 100%;
                /*noinspection CssInvalidFunction*/
                background: inline('slider-arrow-left.svg') center no-repeat;
            }

            &:first-child {
                left: calc(50% - 70px);

                @media (--xl) {
                    left: -2%;
                }

                @media (--hd) {
                    left: -10%;
                }

                @media (--hd) {
                    left: -22%;
                }

                &::before {
                    @media (--hd) {
                        transform: translateX(24px);
                    }
                }
            }

            &:last-child {
                right: calc(50% - 70px);

                @media (--xl) {
                    right: -2%;
                }

                @media (--hd) {
                    right: -10%;
                }

                @media (--hd) {
                    right: -22%;
                }

                &::before {
                    /*noinspection CssInvalidFunction*/
                    background: inline('slider-arrow-right.svg') center no-repeat;

                    @media (--hd) {
                        transform: translateX(-24px);
                    }
                }
            }
        }
    }

    &__item {
        &:hover {
            cursor: pointer;

            .live__play {
                transform: scale(1);
                opacity: 1;
            }

            .live__cover::before {
                opacity: 1;
            }

            .live__title {
                color: var(--hoverColor);
            }

            .live__arrow {
                width: 47px;
            }

            .live__time {
                transform: translateX(50px);
                opacity: 0;
            }
        }
    }

    &__cover {
        position: relative;
        height: 250px;
        overflow: hidden;
        border-radius: 5px;
        margin-bottom: 27px;

        &::before {
            position: absolute;
            top: 0;
            left: 0;
            content: '';
            display: block;
            width: 100%;
            height: 100%;
            background: color(#0c1123 alpha(65%));
            opacity: 0;
            transition: var(--baseTransition);
        }

        img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }

    &__play {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
        transform: scale(15);
        opacity: 0;
        transition: var(--baseTransition);
    }

    &__title {
        font-weight: 400;
        font-size: 18px;
        margin-bottom: 10px;
        letter-spacing: 0.27px;
        transition: var(--baseTransition);
    }

    &__arrow {
        cursor: pointer;
        display: inline-block;
        width: 0;
        height: 10px;
        border: none;
        outline: none;
        /*noinspection CssInvalidFunction*/
        background: transparent inline('hover-arrow-bg.svg') center no-repeat;
        transition: var(--baseTransition);
    }

    &__time {
        display: inline-block;
        font-family: var(--secondaryFont);
        font-size: 13px;
        color: #f2f2f2;
        letter-spacing: 0.2px;
        transition: var(--baseTransition);
    }

}

.podcasts {
    padding-bottom: 79px;

    &__slider {
        .tns-nav {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;

            button {
                border: none;
                border-radius: 50%;
                outline: none;
                width: 12px;
                height: 12px;
                margin: 10px;
                background: #c1c3da;

                &.tns-nav-active {
                    position: relative;
                    background: var(--hoverColor);

                    &::before {
                        content: '';
                        position: absolute;
                        top: 0;
                        left: -100%;
                        right: -100%;
                        bottom: 0;
                        margin: auto;
                        width: 20px;
                        height: 20px;
                        border: 2px solid var(--hoverColor);
                        border-radius: 50%;
                    }
                }
            }
        }
    }

    &__slide {
        outline: none;
        width: 100%;
        height: 270px;
        margin-bottom: 30px;

        @media (--lg) {
            width: calc(25% - 10px);
        }

        @media (--xl) {
            width: 270px;
        }
    }

    &__items {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    &__item {
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
        border-radius: 5px;
        background-color: #252c47;
        background-position: bottom right;
        background-repeat: no-repeat;
        padding: 38px 25px 32px;
        transition: var(--baseTransition);

        &:hover, &.is-playing {
            cursor: pointer;
            box-shadow: 8px 7px 40px rgba(0, 0, 0, 0.5);

            .podcasts__title {
                color: var(--hoverColor);
            }

            .podcasts__play {
                transform: scale(1.5);
            }
        }
    }

    &__title {
        color: #fefefe;
        font-weight: 400;
        font-size: 19px;
        letter-spacing: 0.28px;
        margin-bottom: 5px;
        transition: var(--baseTransition);
    }

    &__duration {
        color: #c1c3da;
        font-family: var(--secondaryFont);
    }

    &__play {
        margin-top: auto;
        transition: var(--baseTransition);
    }
}

.broadcasts {
    padding-top: 110px;

    &__inner {
        position: relative;
        padding-bottom: 48px;

        &::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            display: block;
            border-radius: 5px;
            width: 91.6%;
            height: 100%;
            background: #1e253f;
        }
    }

    &__days {
        position: relative;
        z-index: 10;
        list-style-type: none;
        width: 91.6%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-radius: 5px;
        border: 1px solid #323952;
        padding: 5px;
        margin: auto auto 50px;

        @media (--sm) {
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: flex-start;
        }

        @media (--xl) {
            justify-content: space-between;
        }
    }

    &__day {
        padding: 14px 40px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        text-transform: uppercase;
        text-align: center;
        transition: var(--baseTransition);

        @media (--sm) {
            flex-basis: auto;
        }

        &:hover, &.tns-nav-active {
            background: #3d466a;
            color: var(--hoverColor);
            box-shadow: 8px 7px 40px rgba(0, 0, 0, 0.5);
        }
    }

    &__slider {
        position: relative;
        z-index: 10;
        padding: 0 30px;

        @media (--hd) {
            padding: 0;
        }

        .tns-controls button {
            position: absolute;
            top: 45%;
            z-index: 10;
            border: 0;
            outline: 0;
            width: 24px;
            height: 24px;
            border-radius: 2px;
            font-size: 0;
            /*noinspection CssInvalidFunction*/
            background: inline('slider-angle-arrow-left.svg') center no-repeat;
            transform: perspective(1px) translateZ(0);
            transition: var(--baseTransition);

            &:hover {
                transform: scale(1.5);
            }

            @media (--hd) {
                top: 20%;
            }

            &:first-child {
                left: 0;

                @media (--hd) {
                    left: -6.7%;
                }
            }

            &:last-child {
                right: 0;
                /*noinspection CssInvalidFunction*/
                background: inline('slider-angle-arrow-right.svg') center no-repeat;

                &:hover {
                    transform: scale(1.5);
                }

                @media (--hd) {
                    right: -6.7%;
                }
            }
        }
    }

    &__items {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    &__item {
        display: flex;
        align-self: flex-start;
        flex-wrap: wrap;
        width: 100%;
        min-height: 150px;
        border-radius: 5px;
        background: #252c47;
        padding: 25px 30px;
        margin-bottom: 15px;
        transition: var(--baseTransition);

        @media (--sm) {
            width: calc(50% - 7.5px);
        }

        @media (--lg) {
            width: calc(20% - 7.5px);
        }

        @media (--hd) {
            width: 222px;
        }

        &:nth-last-child(-n+5) {
            @media (--hd) {
                margin-bottom: 0;
            }
        }

        &:hover, &.is-playing {
            cursor: pointer;
            box-shadow: 8px 7px 40px rgba(0, 0, 0, 0.5);

            .broadcasts__play {
                transform: scale(1.5);
            }

            .broadcasts__title {
                color: var(--hoverColor);
            }
        }
    }

    &__title {
        align-self: flex-start;
        color: #fefefe;
